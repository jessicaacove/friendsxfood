


<section id="team">
  <div class="container wow fadeInUp">
    <div class="row">
      <div class="col-md-12">
        <h3 class="section-title"><%= restaurant.restaurantName %></h3>
        <div class="section-title-divider"></div>
        <p class="section-description">Here are some of <%= restaurant.restaurantName %>'s menu items</p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="member">
          <div class="pic" style="background-image: url('<%= restaurant.dishes.dish1.dishPhoto %>')"></div>
          <h4><%= restaurant.dishes.dish1.dishName %></h4>
          <span><%= restaurant.dishes.dish1.dishDescription %></span>
        </div>
      </div>

      <div class="col-md-3">
        <div class="member">
          <div class="pic" style="background-image: url('<%= restaurant.dishes.dish2.dishPhoto %>')"></div>
          <h4><%= restaurant.dishes.dish2.dishName %></h4>
          <span><%= restaurant.dishes.dish2.dishDescription %></span>
        </div>
      </div>

      <div class="col-md-3">
        <div class="member">
          <div class="pic" style="background-image: url('<%= restaurant.dishes.dish3.dishPhoto %>')"></div>
          <h4><%= restaurant.dishes.dish3.dishName %></h4>
          <span><%= restaurant.dishes.dish3.dishDescription %></span>
        </div>
      </div>

      <div class="col-md-3">
        <div class="member">
          <div class="pic" style="background-image: url('<%= restaurant.dishes.dish4.dishPhoto %>')"></div>
          <h4><%= restaurant.dishes.dish4.dishName %></h4>
          <span><%= restaurant.dishes.dish4.dishDescription %></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-3">
        <div class="social">
          <a class="choosebutton" href="/pairing/<%= restaurant._id %>">Choose this restaurant</a>
        </div>
      </div>
      <div class="col-md-3">
        <div class="social">
          <a class="backbutton" href="/restaurantlist">Back to restaurant list</a>
        </div>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>
</section>
